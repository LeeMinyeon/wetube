mixin videoPlayer(video={})
    .videoPlayer#jsVideoPlayer
        video(src=video.src)
        .videoPlayer__controls 

            .videoPlyer__column
                span#jsVolumeBtn 
                    i.fas.fa-volume-up
                span
                    span#currentTime 00:00:00
                    |/
                    sapn#totalTime 00:00:00
                input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.1" value="0.5")
            .videoPlyer__column 
                span#jsPlayButton
                    i.fas.fa-play
            .videoPlyer__column 
                span#jsFullScreen
                    i.fas.fa-expand